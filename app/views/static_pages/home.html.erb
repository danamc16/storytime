<center>
<h1>StoryTime</h1>
<h2>Bedtime stories by text</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

      <%= f.text_field :phone_number, :placeholder => "Cell Phone Number" %>

      <%= f.submit "Start Your Story", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</center>
